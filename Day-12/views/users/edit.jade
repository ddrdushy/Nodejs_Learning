extends ../layout

block content
    h1 Edit User:

    form(method="post")
        fieldset.form-group
            label(for="name") Name:
            input.form-control(name="name",input="text", placeholder="Enter a name",value="#{room.name}")
        button.btn.btn-primary(type="submit") Save user
        a.btn.btn-primary(href="/admin/user") Cancel
