extends ../layout

block content
    h1 Chat Rooms:
    a.btn.btn-primary(href="/admin/users/add") Add a New user
    table.table.table-striped
        thead
            tr
                th
                th Name
                th
                th ID
        tbody
            each user in users
                tr
                    td(style="width:50px;"): a(href="/admin/users/delete/#{user.id}")
                        span.glyphicon.glyphicon-remove
                    td= user.name
                    td(style="width:50px;"): a(href="/admin/users/edit/#{user.id}")
                        span.glyphicon.glyphicon-pencil
                    td= user.id
