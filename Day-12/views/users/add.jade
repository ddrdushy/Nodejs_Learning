extends ../layout

block content
    h1 Create a New User Room:

    form(method="post")
        fieldset.form-group
            label(for="name") Name:
            input.form-control(name="name",input="text", placeholder="Enter a name")
        button.btn.btn-primary(type="submit") Create New User
        a.btn.btn-primary(href="/admin/user") Cancel
